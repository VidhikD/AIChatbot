<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ChatbotController">
    <Label text="AI Chatbot" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <ListView fx:id="chatListView" prefHeight="300" />
    <HBox spacing="5">
        <TextField fx:id="userInputField" promptText="Type your message..." />
        <Button text="Send" onAction="#sendMessage" />
    </HBox>
</VBox>
